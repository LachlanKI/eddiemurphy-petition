
<div id="update">
    <h1>edit your profile</h1>

    {{#if oops}}
    <h3>{{oops}}</h3>
    {{/if}}
    
    <form action="/update-profile" method="post">
        <input type="text" name="firstname" value="{{user.firstname}}" placeholder="firstname">
        <input type="text" name="lastname" value="{{user.lastname}}" placeholder="lastname">
        <input type="text" name="email" value="{{user.email}}" placeholder="email">
        <input type="password" name="password" value="" placeholder="password">
        <input type="number" name="age" value="{{user.age}}" placeholder="age">
        <input type="text" name="city" value="{{user.city}}" placeholder="city">
        <input type="text" name="homepage" value="{{user.homepage}}" placeholder="homepage">
        <button type="submit">update</button>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>
